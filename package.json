{
  "name": "maraikka",
  "version": "1.0.0",
  "description": "A beautiful desktop app for encrypting and decrypting files",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "node test-encryption.js"
  },
  "keywords": [
    "electron",
    "encryption",
    "file-manager",
    "security"
  ],
  "author": "Maraikka Labs",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "node-forge": "^1.3.1",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.maraikka.app",
    "productName": "Maraikka",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "macos-services/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "macos-services",
        "to": "macos-services"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "afterSign": "scripts/notarize.js",
    "afterPack": "scripts/after-pack.js"
  }
} 